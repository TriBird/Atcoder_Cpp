{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "c++ build for atcoder",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "g++",
            "args": [
                "-I",
                "/home/tribird/atcoder/ac-library/",
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "/home/tribird/atcoder/problem.exe",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
